---
const personalImageAlt = "Miguel Angel"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import ResumeIcon from "@/components/icons/Resume.astro"
import SocialPill from "@/components/SocialPill.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16 object-cover"
      src="/miguel-photo.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/miguelsarm"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Open to Work</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, I'm Miguel
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    Continuously learning. <strong
      >Front-end Web developer and Computer technician</strong
    >. Specialized in the development of unique web applications.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:sarmmiguel@gmail.com">
      <MailIcon class="size-4" />
      Contact
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/miguelsarm">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://drive.google.com/file/d/1TvO1l578dssrjGKc9SmjljGN9wzaVk-8/view?usp=sharing">
      <ResumeIcon class="size-4" />
      Resume
    </SocialPill>
  </nav>
</div>
